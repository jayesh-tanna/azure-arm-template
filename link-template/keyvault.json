{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vaults_bulkingkeyvault_name": {
            "defaultValue": "bulkingkeyvault1",
            "type": "String"
        },
        "tenantId": {
            "type": "string",
            "defaultValue": "[subscription().tenantId]"
        },
        "environment": {
            "type": "string",
            "allowedValues": [
                "PRE-PRODUCTION",
                "Production"
            ]
        },
        "serviceBusAuthRuleResourceId": {
            "type": "string"
        }
    },
    "functions": [
    ],
    "variables": {
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2016-10-01",
            "name": "[parameters('vaults_bulkingkeyvault_name')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "appID": "auto",
                "env": "[parameters('environment')]",
                "orgID": "auto",
                "environment": "[parameters('environment')]"
            },
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "standard"
                },
                "tenantId": "[parameters('tenantId')]",
                "accessPolicies": [
                ],
                "enabledForDeployment": true,
                "enabledForDiskEncryption": true,
                "enabledForTemplateDeployment": true
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2016-10-01",
            "name": "[concat(parameters('vaults_bulkingkeyvault_name'), '/ServiceBusConnString')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.KeyVault/vaults/', parameters('vaults_bulkingkeyvault_name'))]"
            ],
            "properties": {
                "attributes": {
                    "enabled": true
                },
                "value": "[listkeys(parameters('serviceBusAuthRuleResourceId'), '2017-04-01').primaryConnectionString]"
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2016-10-01",
            "name": "[concat(parameters('vaults_bulkingkeyvault_name'), '/ServiceBusConnStringSec')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.KeyVault/vaults/', parameters('vaults_bulkingkeyvault_name'))]"
            ],
            "properties": {
                "attributes": {
                    "enabled": true
                },
                "value": "[listkeys(parameters('serviceBusAuthRuleResourceId'), '2017-04-01').primaryConnectionString]"
            }
        }
    ],
    "outputs": {
    }
}
