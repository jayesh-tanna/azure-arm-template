{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "keyVaultName": {
            "defaultValue": "bulkingkeyvault_dr",
            "type": "string"
        },
        "tenantId": {
            "type": "string",
            "defaultValue": "[subscription().tenantId]"
        },
        "environment": {
            "type": "string",
            "allowedValues": [
                "PRE-PRODUCTION",
                "Production"
            ]
        },
        "serviceBusAuthRuleResourceId": {
            "type": "string"
        },
        "objectId": {
            "type": "string"
        }
    },
    "functions": [
    ],
    "variables": {
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2016-10-01",
            "name": "[parameters('keyVaultName')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "appID": "auto",
                "env": "[parameters('environment')]",
                "orgID": "auto",
                "environment": "[parameters('environment')]"
            },
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "standard"
                },
                "tenantId": "[parameters('tenantId')]",
                "accessPolicies": [
                    {
                        "tenantId": "[parameters('tenantId')]",
                        "objectId": "[parameters('objectId')]",
                        "permissions": {
                            "keys": [
                                "Get",
                                "List"
                            ],
                            "secrets": [
                                "Get",
                                "List"
                            ],
                            "certificates": [
                                "Get",
                                "List",
                                "GetIssuers",
                                "ListIssuers"
                            ]
                        }
                    }
                ],
                "enabledForDeployment": true,
                "enabledForDiskEncryption": true,
                "enabledForTemplateDeployment": true
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2016-10-01",
            "name": "[concat(parameters('keyVaultName'), '/ServiceBusConnString')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.KeyVault/vaults/', parameters('keyVaultName'))]"
            ],
            "properties": {
                "attributes": {
                    "enabled": true
                },
                "value": "[listkeys(parameters('serviceBusAuthRuleResourceId'), '2017-04-01').primaryConnectionString]"
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2016-10-01",
            "name": "[concat(parameters('keyVaultName'), '/ServiceBusConnStringSec')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.KeyVault/vaults/', parameters('keyVaultName'))]"
            ],
            "properties": {
                "attributes": {
                    "enabled": true
                },
                "value": "[listkeys(parameters('serviceBusAuthRuleResourceId'), '2017-04-01').primaryConnectionString]"
            }
        }
    ],
    "outputs": {
    }
}
