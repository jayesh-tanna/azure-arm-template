{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "namespaces_oneittelemetrybulking_name": {
            "defaultValue": "oneittelemetrybulking1",
            "type": "String"
        },
        "environment": {
            "type": "string",
            "allowedValues": [
                "PRE-PRODUCTION",
                "Production"
            ]
        },
        "tenantId": {
            "type": "string",
            "defaultValue": "[subscription().tenantId]" 
        },
        "vaults_bulkingkeyvault_name": {
            "defaultValue": "bulkingkeyvault1",
            "type": "String"
        }
    },
    "variables": {
        "serviceBusTemplateName": "serviceBusTemplate",
        "keyVaultTemplateName": "keyVaultTemplate"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "[variables('serviceBusTemplateName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'servicebus.json')]", //"https://github.com/jayesh-tanna/azure-arm-template/blob/master/link-template/servicebus.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "environment": {
                        "value": "[parameters('environment')]"
                    },
                    "namespaces_oneittelemetrybulking_name": {
                        "value": "[parameters('namespaces_oneittelemetrybulking_name')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "[variables('keyVaultTemplateName')]",
            "dependsOn": [
                "serviceBusTemplate"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'keyvault.json')]", //"https://github.com/jayesh-tanna/azure-arm-template/blob/master/link-template/keyvault.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "tenantId": {
                        "value": "[parameters('tenantId')]"
                    },
                    "vaults_bulkingkeyvault_name": {
                        "value": "[parameters('vaults_bulkingkeyvault_name')]"
                    },
                    "environment": {
                        "value": "[parameters('environment')]"
                    },
                    "serviceBusPrimaryConnString": {
                        "value": "[listkeys(reference('serviceBusTemplate').outputs.authRuleResourceId.value, '2017-04-01').primaryConnectionString]"
                    },
                    "serviceBusSecondaryConnString":{
                        "value": "[listkeys(reference('serviceBusTemplate').outputs.authRuleResourceId.value, '2017-04-01').secondaryConnectionString]"
                    }
                }
            }
        }
    ],
    "outputs": {
    }
}
